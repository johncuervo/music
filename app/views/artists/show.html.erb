<div class="container", style="width:100%; background-color:#A4A4A4; margin-top: 30px; margin-bottom: 30px; padding: 25px; border: 10px double white;">
     <div class="row">
       <div class="col-md-9">
         <h1 class="text-center"><%= @artist.name %></h1>
         <h3 class="text-center">Albums (<%= @albums.length %>) </h3>
         <br>
         <div class="row">
           <% @albums.each do |album| %>
             <div class="col-3 foto-artista-show p-3">
               <div class="card", style="background-color:#A4A4A4">
                 <img class="card-img-top" src=<%= album.image_url %> alt=<%= album.name %> >
                 <div class="card-body", style="text-align: center;">
                   <h5 class="card-title"><%= album.name %></h5>
                   <p><%= album.released_at %></p>
                 </div>
               </div>
            </div>
           <% end %>
         </div>
       </div>
       <div class="col-md-3", padding: 0">
           <img class="card-img-top" src=<%= @artist.image_url %> alt=<%= @artist.name %> height="250px">
       </div>
     </div>
</div>
